FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app
COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

COPY scripts/api_service.py scripts/config.py ./scripts/

EXPOSE 8000

CMD ["uvicorn", "scripts.api_service:app", "--host", "0.0.0.0", "--port", "8000"]
