# Переменные окружения для оптимизации памяти

# Основные настройки памяти
MEMORY_WARNING_MB=2048                 # Лимит предупреждения о памяти (2 ГБ)
FORCE_SVD_THRESHOLD_MB=1500           # Принудительно включать SVD при превышении (1.5 ГБ)

# Диапазон TF-IDF max_features для оптуна (снижен для экономии памяти)
TFIDF_MAX_FEATURES_MIN=500            # Минимальное количество признаков
TFIDF_MAX_FEATURES_MAX=2000           # Максимальное количество признаков (было 6000)

# Дополнительные настройки оптуны для экономии времени при проблемах с памятью
OPTUNA_N_TRIALS=20                    # Сниженное количество trials (было 40)
OPTUNA_TIMEOUT_SEC=600                # Увеличенный timeout для предотвращения прерывания

# Настройки обработки данных
PER_CLASS_LIMIT=15000                 # Сниженный лимит записей на класс (было 20000)

# Пример использования в docker-compose.yml или .env файле:
# environment:
#   - MEMORY_WARNING_MB=2048
#   - TFIDF_MAX_FEATURES_MAX=2000
#   - FORCE_SVD_THRESHOLD_MB=1500