# Пример .env файла для проекта kindle_reviews
# Скопируйте в .env и замените значения при необходимости

# Общие
ENV=development
SEED=42

# Пути (можно оставить по умолчанию)
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODEL_DIR=model

# Kaggle
KAGGLE_DATASET=bharadwaj6/kindle-reviews
CSV_NAME=kindle_reviews.csv

# Флаги
FORCE_DOWNLOAD=false
FORCE_PROCESS=false
FORCE_TRAIN=false

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_INCLUDE_TIMESTAMP=true

# Optuna/MLflow
OPTUNA_N_TRIALS=40
OPTUNA_STORAGE=sqlite:///optuna_study.db
STUDY_BASE_NAME=kindle_optuna
MLFLOW_TRACKING_URI=

# Airflow
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__CORE__LOAD_EXAMPLES=False
